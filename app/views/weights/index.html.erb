<h1>Listing Weights</h1>

<table border="1" style="width:100%">
  <thead>
    <tr>
      <th style="padding:10px">Weight</th>
      <th style="padding:10px">Units</th>
      <th style="padding:10px">Date</th>
      <th style="padding:10px">Controls</th>
    </tr>
  </thead>
  <tbody>
    <% @weights.each do |weight| %>
      <tr>
        <td style="padding:10px"><%= weight.Weight %></td>
        <td style="padding:10px"><%= weight.Units %></td>
        <td style="padding:10px"><%= weight.Date %></td>
        <td style="padding:10px"><%= link_to 'Destroy', user_weight_path(params[:user_id], weight), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
