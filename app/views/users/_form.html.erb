<%= form_for @user do |f| %>
  <div class="field"> 
    First Name:</br> 
    <%= f.text_field :first_name %> 
  </div>
  
  <div class="field"> 
    Last Name:</br> 
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field"> 
    Birth:</br> 
    <%= f.date_select :birth, :start_year=>Date.today.year-100, :end_year=>Date.today.year %>
  </div>
  
  <div class="field"> 
    Gender:</br> 
    <%= f.select(:gender, [['Male',1],['Female',2],['Other',3]]) %>
  </div>
<% end %>