<h1>Listing Accounts</h1>

<table border="1" style="width:100%">
  <thead>
    <tr>
      <th style="padding:10px">Email</th>
      <th style="padding:10px">Password</th>
      <th style="padding:10px" colspan="3">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td style="padding:10px"><%= account.email %></td>
        <td style="padding:10px"><%= account.password_digest %></td>
        <td style="padding:10px"><%= link_to 'Show', account %></td>
        <td style="padding:10px"><%= link_to 'Edit', edit_account_path(account) %></td>
        <td style="padding:10px"><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
